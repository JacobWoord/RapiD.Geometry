<UserControl x:Class="RapiD.Geometry.Views.DoorControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RapiD.Geometry.Views"
             mc:Ignorable="d" 
             xmlns:viewmodels="clr-namespace:RapiD.Geometry.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:DoorControlViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
             
    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBox Text="{Binding TotalLength, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Text="{Binding LinkLength, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Text="{Binding Diameter, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Text="{Binding Width, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="UPDATE"/>
        </StackPanel>

    </Grid>
</UserControl>
